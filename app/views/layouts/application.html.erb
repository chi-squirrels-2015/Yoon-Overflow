<!DOCTYPE html>
<html>
  <head>
    <title>YoonOverflow</title>
      <%= stylesheet_link_tag 'application' %>
      <%= javascript_include_tag 'application' %> 
      <%= csrf_meta_tags %>
  </head>
<header>
  <h1><a href='/'>Yoon Overflow</a></h1>
</header>
  <body>
    <nav>
    <% unless current_user %>
     <%= link_to 'Signup', new_user_registration_path  %>
     <%= link_to 'Signin', new_user_session_path  %>
     <% else %>
     <%= link_to 'My Profile', profile_path(current_user.id) %>
     <%= link_to 'Logout', destroy_user_session_path ,method: :delete%>
    <% end %>
    </nav>
    <%= yield %>
  </body>

  <footer>Yoon ITL Fortune 500</footer>
</html>
