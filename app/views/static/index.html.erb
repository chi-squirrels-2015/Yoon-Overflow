<div class="index-container">

  <h2>Top Questions</h2>

  <table>
    <% @questions.each do |question| %>
      <tr>
        <td class="small-data">
          <div class="arrow-up"></div><br>
          <div class="arrow-down"></div>
        </td>

        <td class="small-data"><%= question.answers.count %>
          <br>Answers</td>

        <td id="question-data"><h4><%= link_to question.title, question_path(question) %></h4>
        asked by <%= link_to question.user.name, profile_path(question.user.slug) %> at <%= question.created_at %></td>

      </tr>

    <% end %>
  </table>

</div>




